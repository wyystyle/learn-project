    <template name="articlesItem">
      <view class='article-item'>
        <view class='article-head'>
          <image class='article-head-avatar' src='{{avatar}}'></image>
          <text class='article-head-text'>{{date}}</text>
        </view>
        <view class='article-title'>
          <text class='article-title-text'>{{title}}{{idx}}</text>
        </view>
        <view class='article-description'>
          <image class='article-description-img' src='{{img}}'></image>
          <text class='article-description-text'>{{description}}</text>
        </view>
        <view class='footer'>
          <image class='article-footer-img' src='/images/swiper/2.jpg'></image>
          <text class='article-footer-text'>{{star}}</text>
          <image class='article-footer-img' src='/images/swiper/2.jpg'></image>
          <text class='article-footer-text'>{{view}}</text>
        </view>
      </view>
    </template>